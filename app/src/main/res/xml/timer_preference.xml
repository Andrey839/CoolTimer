<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_sound"
        android:title="Enable Sound"
        android:summaryOff="Sound off"
        android:summaryOn="Sound on"/>

    <ListPreference
        android:title="Sound"
        android:key="sound_value"
        android:defaultValue="song"
        android:entries="@array/timer_melody_name"
        android:entryValues="@array/timer_melody_values"
        />

    <EditTextPreference
        android:title="Timer Default Time"
        android:key="timer_default"
        android:defaultValue="0:0"/>

</PreferenceScreen>